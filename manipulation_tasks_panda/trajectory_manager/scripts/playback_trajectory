#!/usr/bin/env python3
"""
Playback of trajectories and storing them into a databaseself.
"""
from lfd import LfD
from lfd_image import LfD_image
import sys
import os
import rospy

if __name__ == '__main__':
    try:
        arg1 = sys.argv[1]
        spiral_flag = sys.argv[2]
        camera_feedback = sys.argv[3]
    except IndexError:
        print("Usage: " + os.path.basename(__file__) + " <trajectory_file_name>")
        sys.exit(1)

    if int(camera_feedback):
        lfd = LfD_image()
    else:
        lfd = LfD()

    lfd.load(arg1)
    
    try:
        lfd.execute(spiral_flag)
    except rospy.ROSInterruptException:
        pass
    
    save = None

    while not (save in [0,1]):
        print("SAVE CURRENT RECORDING? 0 = NO, 1 = YES")
        try:
            save = int(input('\n'))
        except:
            print("INVALID INPUT")
    if save:
        lfd.save(arg1)
